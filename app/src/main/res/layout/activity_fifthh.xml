<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".FifthhActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_fifth"
        tools:context=".FifthActivity"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/baseline_arrow_back_ios_new_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Method"
                android:layout_gravity="center"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/white"
                android:paddingLeft="80dp"
                android:paddingTop="5dp"
                android:textSize="18dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/pilih_bioskop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Bioskop"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:fontFamily="@font/poppinssemibold"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="45dp"/>
        <Spinner
            android:id="@+id/pilihan_bioskop"
            android:padding="5dp"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded2"
            android:layout_marginLeft="38dp"
            android:layout_marginBottom="7dp"/>

        <TextView
            android:id="@+id/pilih_jenis_kursi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Seat"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:fontFamily="@font/poppinssemibold"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"/>
        <Spinner
            android:id="@+id/pilihan_seat"
            android:padding="5dp"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded2"
            android:layout_marginLeft="38dp"
            android:layout_marginBottom="7dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Tanggal"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:fontFamily="@font/poppinssemibold"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mdy"
                android:layout_width="270dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="9dp"
                android:background="@drawable/rounded_rectangle"
                android:fontFamily="@font/poppinsregular"
                android:text="dd/mm/yy"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_weight="5"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/button_tgl"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_calendar_month_24"
                android:background="@drawable/rounded_rectangle_clickabel" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Waktu"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:fontFamily="@font/poppinssemibold"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time"
                android:layout_width="270dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="9dp"
                android:background="@drawable/rounded_rectangle"
                android:fontFamily="@font/poppinsregular"
                android:paddingHorizontal="16dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="00:00"
                android:textColorHint="@color/black"
                android:layout_weight="5"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/button_time"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_calendar_month_24"
                android:background="@drawable/rounded_rectangle_clickabel" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="38dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/jumlah_kursi_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Seat"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:fontFamily="@font/poppinssemibold"/>

            <ImageButton
                android:id="@+id/button_plus"
                android:layout_marginLeft="140dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_add_24"
                android:background="@drawable/rounded_rectangle_clickabel" />
            <TextView
                android:id="@+id/jumlah_kursi_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/poppinssemibold"/>

            <ImageButton
                android:id="@+id/button_minus"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_horizontal_rule_24"
                android:background="@drawable/rounded_rectangle_clickabel" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="38dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seat Pilihan"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:fontFamily="@font/poppinssemibold"/>

            <TextView
                android:id="@+id/harga_kursi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:text="Rp0"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:fontFamily="@font/poppinssemibold"/>
            <TextView
                android:id="@+id/x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="x"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:fontFamily="@font/poppinssemibold"/>
            <TextView
                android:id="@+id/jumlah_kursi_real2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:fontFamily="@font/poppinssemibold"/>
        </LinearLayout>

        <View
            android:layout_width="330dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_height="5dp"
            android:background="@drawable/line" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="38dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actual Pay"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:fontFamily="@font/poppinssemibold"/>

            <TextView
                android:id="@+id/total_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:text="Rp35000"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:fontFamily="@font/poppinssemibold"/>
        </LinearLayout>

        <Spinner
            android:id="@+id/methode_pembayaran"
            android:padding="10dp"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded2"
            android:layout_marginLeft="38dp"
            android:layout_marginBottom="7dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/bank_pilihan"
                android:padding="5dp"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded2"
                android:layout_marginLeft="38dp"
                android:layout_marginBottom="7dp"/>

            <EditText
                android:id="@+id/username_input_edittext"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:background="@drawable/rounded2"
                android:text="Account Virtual"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_order_summary"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkbox"
            android:text="Order Summary"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple"
            />
    </LinearLayout>

</LinearLayout>