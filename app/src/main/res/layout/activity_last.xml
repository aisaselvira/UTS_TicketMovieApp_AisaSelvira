<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sixth"
    android:orientation="vertical"
    tools:context=".LastActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/baseline_arrow_back_ios_new_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Summary"
            android:layout_gravity="center"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/white"
            android:paddingLeft="80dp"
            android:paddingTop="5dp"
            android:textSize="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/starwars"
            android:layout_marginTop="20dp"
            android:layout_width="160dp"
            android:layout_height="240dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/film1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/jwTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Star Wars"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/MoviePlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Bioskop"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/MovieDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wednesday, 20 Nov 2019,"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/MovieTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinsregular"
                android:text="15:05"
                android:layout_marginLeft="2dp"
                android:textStyle="bold"
                android:textSize="16dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/white"
        android:layout_marginLeft="65dp"
        android:text="Order Number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/white"
        android:layout_marginLeft="65dp"
        android:text="1198804794001625088"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/white"
        android:layout_marginLeft="65dp"
        android:text="Seat"/>

    <TextView
        android:id="@+id/jenis_kursi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/white"
        android:layout_marginLeft="65dp"
        android:text="Seat"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/white"
        android:layout_marginLeft="65dp"
        android:text="Payment Method"/>

    <TextView
        android:id="@+id/TicketPaymentMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/white"
        android:layout_marginLeft="65dp"
        android:text="Transfer"/>
    <TextView
        android:id="@+id/TicketCaraBayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/white"
        android:layout_marginLeft="65dp"
        android:text="Payment ATM"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/white"
        android:layout_marginLeft="65dp"
        android:text="Convenience Fee"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/white"
        android:layout_marginLeft="65dp"
        android:text="Rp 0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/blue"
        android:layout_marginLeft="65dp"
        android:text="Actual Pay"/>

    <TextView
        android:id="@+id/TicketTotalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/blue"
        android:layout_marginLeft="65dp"
        android:text="Rp "/>

</LinearLayout>